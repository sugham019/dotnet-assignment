@page
@model dotnet_assignment.Pages.RegisterModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Register Member";
}
<main class="main-content">
    <div class="form-card">

<h2>Register Member</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group">
        <label>Full Name</label>
        <input asp-for="Input.FullName" placeholder="Enter your full name"/>
        <span asp-validation-for="Input.FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Input.Email"  placeholder="Enter your email"/>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="Input.Password" type="password" placeholder="Enter your password"/>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Role</label>
        <select asp-for="Input.Role" 
                asp-items='new List<SelectListItem> { 
                    new SelectListItem("Student", "Student"), 
                    new SelectListItem("Teacher", "Teacher"),
                    new SelectListItem("Admin", "Admin") 
                }'>
        </select>
        <span asp-validation-for="Input.Role" class="text-danger"></span>
    </div>

    
    <button type="submit">Register</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    
    <p class="success-message">@Model.Message</p>
}
</div>
</main>

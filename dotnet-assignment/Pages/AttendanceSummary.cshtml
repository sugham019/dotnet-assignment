@page
@model dotnet_assignment.Pages.AttendanceSummaryModel
@{
    ViewData["Title"] = "Attendance Summary";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@* <h1 class="mb-4 fw-semibold">Attendance Summary</h1> *@

<form method="get" class="mb-4 p-3 bg-light border rounded">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="StudentId" class="form-select">
                <option value="">-- Select Student --</option>
                @foreach (var student in Model.Students)
                {
                    <option value="@student.Id" selected="@(student.Id == Model.StudentId ? "selected" : null)">
                        @student.FullName
                    </option>
                }
            </select>
        </div>

        <div class="col-auto">
            <input type="date"
                   asp-for="Date"
                   class="form-control"
                   value="@(Model.Date.HasValue ? Model.Date.Value.ToString("yyyy-MM-dd") : "")" />
        </div>

        <div class="col-auto d-flex align-items-center">
            <div class="btn-group" role="group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Search
                </button>
                <a asp-page="/AttendanceSummary" class="btn btn-outline-secondary">
                    Reset
                </a>
            </div>
        </div>
    </div>
</form>

<div class="row mb-4">
    <div class="col-auto ms-auto">
        <div class="card p-3 shadow-sm">
            <canvas id="attendanceChart" style="width:400px; height:250px;"></canvas>
        </div>
    </div>
</div>

@section Scripts {
<script>
    var ctx = document.getElementById('attendanceChart').getContext('2d');
    var isSingleStudent = @Model.StudentId.HasValue.ToString().ToLower();

    if (isSingleStudent) {
        var presentCount = @Model.AttendanceRecords.Count(a => a.IsPresent);
        var absentCount = @Model.AttendanceRecords.Count(a => !a.IsPresent);

        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Present', 'Absent'],
                datasets: [{
                    data: [presentCount, absentCount],
                    backgroundColor: ['#4caf50', '#f44336']
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Attendance of @Model.Students.FirstOrDefault(s => s.Id == Model.StudentId)?.FullName'
                    }
                }
            }
        });
    } else {
        var topStudents = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
            Model.AttendanceRecords
                .GroupBy(a => a.Member.FullName)
                .Select(g => new {
                    Name = g.Key,
                    PresentCount = g.Count(a => a.IsPresent)
                })
                .OrderByDescending(x => x.PresentCount)
                .Take(5)
                .ToList()
        ));

        var studentLabels = topStudents.map(s => s.Name);
        var studentAttendanceData = topStudents.map(s => s.PresentCount);

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: studentLabels,
                datasets: [{
                    label: 'Days Present',
                    data: studentAttendanceData,
                    backgroundColor: '#2196f3'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Top 5 Students by Attendance'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        precision: 0
                    }
                }
            }
        });
    }
</script>
}

<table class="table table-striped table-hover border">
    <thead class="table-light">
        <tr>
            <th>Student</th>
            <th>Date</th>
            <th>Status</th>
            <th>Marked At (UTC)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.AttendanceRecords.Any())
        {
            foreach (var attendance in Model.AttendanceRecords)
            {
                <tr>
                    <td>@attendance.Member.FullName</td>
                    <td>@attendance.Date.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (attendance.IsPresent)
                        {
                            <span class="badge bg-success">Present</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Absent</span>
                        }
                    </td>
                    <td>@attendance.MarkedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">
                    No records found.
                </td>
            </tr>
        }
    </tbody>
</table>

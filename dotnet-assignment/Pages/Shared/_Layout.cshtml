@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - dotnet_assignment</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/dotnet_assignment.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/attendance.css" asp-append-version="true"/>
</head>

<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light shadow-sm mb-3">
        <div class="container">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <!-- Left links -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Home</a>
                    </li>

                    @if (Context.Session.GetString("UserRole") == "Teacher")
                    {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Attendance">Attendance</a>
                    </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/AttendanceSummary">Attendance Summary</a>
                    </li>
                    @if (Context.Session.GetString("UserEmail") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/LeaveRequest">Leave Request</a>
                        </li>
                    }
                    @if (Context.Session.GetString("UserRole") == "Teacher")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/LeaveApproval">Leave Approval</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto align-items-center">
                    @if (Context.Session.GetString("UserEmail") != null)
                    {
                    <li class="nav-item me-2">
                            <span class="badge bg-secondary">
                                @Context.Session.GetString("UserEmail")
                            </span>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-danger btn-sm" asp-page="/Logout">
                            Logout
                        </a>
                    </li>
                    }
                    else
                    {
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary btn-sm" asp-page="/Login">
                            Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary btn-sm" asp-page="/Register">
                            Register
                        </a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container main-content">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer">
    <div class="container">
        &copy; 2026 - Smart Attendance & Leave System
        <a asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background: #ededed;
        margin: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .main-content {
        flex: 1;
        padding: 20px;
    }

    .navbar {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(8px);
    }

    .navbar .nav-link {
        margin-right: 12px;
        transition: color 0.2s, transform 0.2s;
    }

    .navbar .nav-link:hover {
        color: #0d6efd;
        transform: translateY(-1px);
    }

    .footer {
        text-align: center;
        padding: 30px;
        background-color: #f3f4f6;
        font-size: 14px;
        color: #555;
        margin-top: auto;
    }
</style>
</body>
</html>
